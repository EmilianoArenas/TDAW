    <style>
        #imagenMediana {
            cursor: pointer;
        }
        #imagenGrande {
            display: none;
        }
    </style>
    <script>
        function mostrarImagenGrande() {
            var imagenMediana = document.getElementById('imagenMediana');
            var imagenGrande = document.getElementById('imagenGrande');

            imagenMediana.style.display = 'none';
            imagenGrande.style.display = 'block';
        }
    </script>
</head>
<body>
    <!--encabezado de la pagina-->
    <header>
